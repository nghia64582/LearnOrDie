[
  {
    "name": "Run Fast App",
    "description": "Run Fast App",
    "commands": [
      "cd ~/workspace/ai_voice_recorder",
      "source .venv/bin/activate",
      "cd src",
      "sudo nohup uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
    ]
  },
  {
    "name": "Update code",
    "description": "Pull code from master and reload",
    "commands": [
      "cd ~/workspace/ai_voice_recorder",
      "sudo git pull",
      "sudo git pull --rebase"
    ]
  },
  {
    "name": "Show running app",
    "description": "Show running app",
    "commands": [
      "ps aux | grep uvicorn"
    ]
  },
  {
    "name": "View log",
    "description": "View log by day, edit the date to show the file",
    "commands": [
      "tail -f workspace/ai_voice_recorder/log/file_2025_09_09.txt -n 30"
    ]
  }
]